type Car {
    id: ID!
    brand: String!
    model: String!
    color: String!
    yearOfProduction: Int!
    price: Float!
}

input CarInput {
    brand: String!
    model: String!
    color: String!
    yearOfProduction: Int!
    price: Float!
}

type Query {
    getAllCars: [Car]!
    getCarById(id: ID!): Car
}

type Mutation {
    addCar(input: CarInput!): Car!
    updateCar(id: ID!, input: CarInput!): Car!
    deleteCar(id: ID!): Boolean!
}

type Subscription {
    carUpdates: Car!
}
